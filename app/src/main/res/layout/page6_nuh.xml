<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFB2"
    tools:context="com.example.dell.alkitabanak.page6_nuh">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:scaleType="fitXY"
        android:src="@drawable/page6_nuh"
        android:layout_above="@+id/textViewPageSix"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_page_six"
        android:id="@+id/textViewPageSix"
        android:textSize="21sp"
        android:layout_toRightOf="@+id/imageViewHelper"
        android:layout_toLeftOf="@+id/imageButton7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/imageButton7" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonPrevPageSix"
        android:onClick="onClickPrevPageSix"
        android:src="@drawable/previous_arrow"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickNextPageSix"
        android:id="@+id/imageButtonNextPageSix"
        android:layout_alignTop="@+id/imageButtonPrevPageSix"
        android:layout_alignRight="@+id/imageView7"
        android:layout_alignEnd="@+id/imageView7"
        android:src="@drawable/quiz_arrow" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/speaker"
        android:layout_marginBottom="30dp"
        android:onClick="onClickDub"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageButtonNextPageSix"
        android:layout_alignStart="@+id/imageButtonNextPageSix" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewHelper"
        android:layout_alignBottom="@+id/imageButton7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
